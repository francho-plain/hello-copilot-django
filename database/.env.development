# Development Environment Configuration
# ====================================

# Database Configuration
POSTGRES_DB=cats_dev_db
POSTGRES_USER=cats_dev_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Development Settings
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_CONNECT_TIMEOUT=10

# Environment
ENVIRONMENT=development

# Container Settings
POSTGRES_CONTAINER_NAME=cats_dev_database
POSTGRES_VOLUME_NAME=cats_dev_data
POSTGRES_NETWORK_NAME=cats_dev_network

# Development Conveniences
POSTGRES_LOG_LEVEL=debug
POSTGRES_LOG_STATEMENT=all
POSTGRES_APPLICATION_NAME=cats_dev_app

# Fast Health Checks for Development
POSTGRES_HEALTH_CHECK_INTERVAL=10s
POSTGRES_HEALTH_CHECK_TIMEOUT=5s
POSTGRES_HEALTH_CHECK_RETRIES=2

# Development Tools
POSTGRES_ENABLE_PGSTAT_STATEMENTS=true
POSTGRES_TRACK_ACTIVITY_QUERY_SIZE=2048