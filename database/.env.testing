# Testing Environment Configuration
# =================================

# Database Configuration
POSTGRES_DB=cats_test_db
POSTGRES_USER=cats_test_user
POSTGRES_PASSWORD=test_password_123
POSTGRES_HOST=localhost
POSTGRES_PORT=5434

# Testing Settings
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTIONS=25
POSTGRES_SHARED_BUFFERS=64MB
POSTGRES_CONNECT_TIMEOUT=5

# Environment
ENVIRONMENT=testing

# Container Settings
POSTGRES_CONTAINER_NAME=cats_test_database
POSTGRES_VOLUME_NAME=cats_test_data
POSTGRES_NETWORK_NAME=cats_test_network

# Fast Operations for Testing
POSTGRES_LOG_LEVEL=error
POSTGRES_LOG_STATEMENT=none
POSTGRES_APPLICATION_NAME=cats_test_app

# Minimal Health Checks
POSTGRES_HEALTH_CHECK_INTERVAL=5s
POSTGRES_HEALTH_CHECK_TIMEOUT=3s
POSTGRES_HEALTH_CHECK_RETRIES=1

# Testing Optimizations
POSTGRES_FSYNC=off
POSTGRES_SYNCHRONOUS_COMMIT=off
POSTGRES_CHECKPOINT_SEGMENTS=32
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9