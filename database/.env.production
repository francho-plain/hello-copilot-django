# Production Environment Configuration
# ==================================

# Database Configuration
POSTGRES_DB=cats_production_db
POSTGRES_USER=cats_prod_user
POSTGRES_PASSWORD=super_secure_production_password_2025
POSTGRES_HOST=prod-db-server.company.com
POSTGRES_PORT=5432

# Security Settings
POSTGRES_SSL_MODE=require
POSTGRES_SSL_CERT=/etc/ssl/certs/postgresql.crt
POSTGRES_SSL_KEY=/etc/ssl/private/postgresql.key
POSTGRES_SSL_ROOT_CERT=/etc/ssl/certs/ca-certificates.crt

# Performance Settings
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_CONNECT_TIMEOUT=30

# Environment
ENVIRONMENT=production

# Container Settings (for Docker deployment)
POSTGRES_CONTAINER_NAME=cats_production_db
POSTGRES_VOLUME_NAME=cats_production_data
POSTGRES_NETWORK_NAME=cats_production_network

# Monitoring and Logging
POSTGRES_LOG_LEVEL=warning
POSTGRES_LOG_STATEMENT=ddl
POSTGRES_APPLICATION_NAME=cats_production_app

# Health Checks
POSTGRES_HEALTH_CHECK_INTERVAL=60s
POSTGRES_HEALTH_CHECK_TIMEOUT=30s
POSTGRES_HEALTH_CHECK_RETRIES=5

# Backup Configuration
POSTGRES_BACKUP_RETENTION_DAYS=30
POSTGRES_BACKUP_S3_BUCKET=cats-production-backups
POSTGRES_BACKUP_SCHEDULE=0 2 * * *